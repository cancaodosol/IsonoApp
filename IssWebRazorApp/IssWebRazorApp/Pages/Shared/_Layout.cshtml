@using Microsoft.AspNetCore.Http;
@using IssWebRazorApp.Models;
@using IssWebRazorApp.Models.Common;

@{ 
    var sessionService = new SessionService();
    var LoginUser = sessionService.GetLoginUser(Context);
}


<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IssWebRazorApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/issapp.css" />
    <link rel='stylesheet' href='https://css.gg/chevron-double-down.css'>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-162109004-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-162109004-1');
    </script>
    <script type="text/javascript" src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">IssWebRazorApp</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Playbooks/Index">Playbooks</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/FootballNotes/Index">FootballNotes</a>
                        </li>
                        <li class="nav-item">
                            <div class="btn-group" role="group">
                                <button id="managementDropMenu" type="button" class="btn dropdown-toggle text-dark" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Management</button>
                                <div class="dropdown-menu" aria-labelledby="managementDropMenu">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Categories/Index">PlayCategories</a>
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Positions/Index">Positions</a>
                                </div>
                            </div>
                        </li>
                        @if (LoginUser != null)
                        {
                            <li class="nav-item">
                                <div class="btn-group" role="group">
                                    <button id="userDropMenu" type="button" class="btn dropdown-toggle text-dark" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">UserMenu</button>
                                    <div class="dropdown-menu" aria-labelledby="userDropMenu">
                                        <a class="dropdown-item" href="">@LoginUser.UserName.DisplayName のページ</a>
                                    </div>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <div class="btn-group" role="group">
                                    <button id="userDropMenu" type="button" class="btn dropdown-toggle text-dark" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">UserMenu</button>
                                    <div class="dropdown-menu" aria-labelledby="userDropMenu">
                                        <a class="nav-link text-dark" asp-area="" asp-page="/Login">Login</a>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - IssWebRazorApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
    
    @RenderSection("Scripts", required: false)
</body>
</html>
