@page
@model IssWebRazorApp.FootballNotes.DetailsModel
@{
    ViewData["Title"] = "Details";
}
    <div>
        <h1>FootballNotes</h1>
        <hr />


        <div class="card">
            <div class="card-header">
                <div class="col-1"><img class="card-img-top w-100" src="~/images/no_image_01.png"></div>
                <div class=" col-md-7">
                    <div class="row">@Model.FootballNoteUnit.ParentNote.Context.Title</div>
                    <div class="row">"ターゲット"</div>
                </div>
            </div>
            <div class="card-body card-text">
                @Model.FootballNoteUnit.ParentNote.Context.Text;
            </div>
            <div class="card-footer text-right">
                <a asp-page="./Edit" asp-route-id="@Model.FootballNoteUnit.ParentNote.NoteId">Edit</a>
            </div>
        </div>

        @foreach (var note in Model.FootballNoteUnit.ChildrenNotes)
        {
            <div class="card">
                <div class="card-header">
                    <div class="col-1"><img class="card-img-top w-100" src="~/images/no_image_01.png"></div>
                    <div class=" col-md-7">
                        <div class="row">@note.Context.Title</div>
                        <div class="row">"ターゲット"</div>
                    </div>
                </div>
                <div class="card-body card-text">
                    @note.Context.Text;
                </div>
                <div class="card-footer text-right">
                    <a asp-page="./Edit" asp-route-id="@note.NoteId">Edit</a>
                </div>
            </div>
        }

    </div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.FootballNoteUnit.ParentNote.NoteId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
